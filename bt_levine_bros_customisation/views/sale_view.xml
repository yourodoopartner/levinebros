<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_sales_order_filter_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.search.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
               <field name="customer_street" string="Street"/>
         	</xpath>
        </field>
    </record>
    
    
     <record id="view_sale_order_form_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='partner_shipping_id']" position="after">
               <field name="replace_delivery_addr_with_invoice" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
         	</xpath>
        </field>
    </record>
    
</odoo>
