<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit.view</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="invoicing" position="after">
                    <page string="Other Info" name="other_info">
                        <group name="parent_gp">
                            <group>
                                <field name="part_code"/>
                                <field name="item_size"/>
                                <field name="item_component_description"/>
                                <field name="unit_of_measure"/>
                          <!--  <field name="allpriser_price"/> -->
                                <field name="percent_price_change"/>
                                <field name="page"/>
                                <field name="addition_flag"/>
                                <field name="deletion_flag"/>
                                <field name="part_code_change"/>
                                <field name="price_change_flag"/>
                                <field name="other_edits"/>
                                <field name="product_type_code"/>
                                <field name="product_type_description"/>
                                <field name="product_group_code"/>
                                <field name="product_group_description"/>
                            </group>
                            <group>
                                <field name="publication_code"/>
                                <field name="pricing_region"/>
                                <field name="update_id"/>
                                <field name="date_of_update"/>
                                <field name="previous_part_code"/>
                                <field name="allpriser_key_number"/>
                                <field name="effective_date"/>
                                <field name="future_use_1"/>
                                <field name="future_use_2"/>
                            </group>
                        </group>
                    </page>
                </page>
                
            </field>
            </record>
       
     
     <record id="view_product_product_form_inherit_view" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='barcode']" position="after">
                	<field name="labour"/>
                </xpath> 
        </field>
    </record> 
    </data>
</odoo>
