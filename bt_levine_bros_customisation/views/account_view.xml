<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_form_inherit_view" model="ir.ui.view">
        <field name="name">account.account.form.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='deprecated']" position="after">
               <field name="checking_account"/>
         	</xpath>
        </field>
    </record>

   <record id="view_account_payment_form_inherit_view" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='payment_type']" position="after">
               <field name="payment_source" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
         	</xpath>
        </field>
    </record>
    
    <record id="view_account_invoice_filter_inherit_view" model="ir.ui.view">
        <field name="name">account.move.search.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
               <field name="customer_street" string="Street"/>
               <field name="ref" string="Reference"/>
               <field name="client_po" string="Client PO"/>
         	</xpath>
        </field>
     </record>
    
     <record id="view_account_move_form_inherit_view" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='ref']" position="after">
               <field name="client_po"/>
         	</xpath>
        </field>
    </record> 
    
</odoo>
