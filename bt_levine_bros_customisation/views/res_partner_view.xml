<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record id="view_partner_form_inherit_view" model="ir.ui.view">
        <field name="name">Import Partner Details</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
            	<page name="other_info" string="Other Info">
            	<group>
            		<group colspan="5">
            			<field name="import_id" invisible="1"/>
            			<field name="code"/>
            		</group>
            	</group>
            	<group>
            		<group colspan="5">
            			<field name="supplier_rank" invisible="1"/>
            			<field name="customer_rank" invisible="1"/>
            			<field name="bni" attrs="{'invisible': [('supplier_rank','>', 0)]}"/>
            			<field name="plomberie_lachine" attrs="{'invisible': [('supplier_rank','>', 0)]}"/>
            			<field name="assurance" attrs="{'invisible': [('supplier_rank','>', 0)]}"/>
            			<field name="henry" attrs="{'invisible': [('supplier_rank','>', 0)]}"/>
            			<field name="a_de_gagne" attrs="{'invisible': [('supplier_rank','>', 0)]}"/>
            			<field name="extension" attrs="{'invisible': [('supplier_rank','>', 0)]}"/>
            			<field name="residential_commercial" attrs="{'invisible': [('supplier_rank','>', 0)]}"/>
            			<!--  <field name="groupe_de_taxes_description"/>-->
            			<field name="expense_account_code_description" attrs="{'invisible': [('customer_rank','>', 0)]}"/>
            		</group>
            	</group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
